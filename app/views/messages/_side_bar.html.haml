.Side
  .Header
    .UserBox
      %p.UserBox__username= current_user.name
      %ul.EditBox
        %li
          = link_to new_group_path, {class: "EditBox__newgroup"} do
            = icon('fas', 'edit')
        %li
          = link_to edit_user_path(current_user), {class: "EditBox__settings"} do
            = icon('fas', 'cog')
  .Group-list
    - current_user.groups.each do |group|
      .ListBox
        = link_to group_messages_path(group.id), { class:"ListBox_link" } do
          %p.ListBox__groupname= group.name
          %p.ListBox__message= group.show_last_message